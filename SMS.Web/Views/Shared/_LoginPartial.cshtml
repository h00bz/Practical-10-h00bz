<!-- AMC Login partial to display links on nav bar -->
@if (User.Identity.IsAuthenticated) {
    <!-- Logged in -->
    <div class="navbar-nav" >  
        <div class="nav-item dropdown hover-effect">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi-person-fill"></i>
                @User.Identity.Name 
            </a>
            <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="navbarDropdownMenuLink">
                <!-- TBC - add Profile menu <li><a>...</></li> option here -->

                <li>
                    <form asp-controller="User" asp-action="Logout">
                        <button type="submit" class="dropdown-item btn btn-link">
                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div> 
    </div>
} else {
    <!-- Not Logged in -->
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link text-dark hover-effect"  asp-controller="User" asp-action="Login">Login</a></li>
        <li class="nav-item"><a class="nav-link text-dark hover-effect"  asp-controller="User" asp-action="Register">Register</a></li>    
    </ul>
}

